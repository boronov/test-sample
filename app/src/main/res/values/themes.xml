<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Core" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>

        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowActionBarOverlay">true</item>

    </style>

    <style name="Theme.Core.Button.Primary" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_height">48dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>

        <item name="cornerRadius">15dp</item>
    </style>

</resources>