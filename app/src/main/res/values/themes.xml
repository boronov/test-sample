<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Core" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary</item>

        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowActionBarOverlay">true</item>

    </style>

    <style name="Theme.Core.Button.Primary" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_height">48dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="Theme.Core.TitleTextAppearance" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/bold</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Core.Input">
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="boxBackgroundColor">@color/box_input_default</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="Theme.Core.Input.EditText">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

</resources>